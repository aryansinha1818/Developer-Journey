<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Note Taking App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="w-full rounded-md outline-none block px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="w-full rounded-md outline-none mt-2 block px-5 py-2 resize-none bg-zinc-800"
            placeholder="Write your task details here"
            name="details"
          ></textarea>
          <input
            class="bg-blue-600 px-4 py-2 rounded-md mt-3 cursor-pointer hover:bg-blue-700 transition"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks flex flex-wrap gap-3 p-10">
        <% if (files.length > 0) { %> <% files.forEach(function(val) { %>
        <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-2xl font-semibold tracking-tight">
            <%= val %>
          </h1>
          <div class="flex w-full justify-between items-center mt-3">
            <a
              href="/file/<%= val %>"
              class="text-blue-500 inline-block hover:underline"
            >
              Read More
            </a>
            <a class="text-zinc-600" href="/edit/<%= val %>"> filename ✏️ </a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h3 class="text-zinc-600">no tasks yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
